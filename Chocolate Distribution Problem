#User function Template for python3

class Solution:

    def findMinDiff(self, arr,M):

        # code here
        sort = sorted(arr)
        n = len(sort)
        if M == 0 or n == 0:
            return 0
        if M > n:
            return -1
        res = float('inf')
        for i in range(n - M + 1):
            diff = sort[i + M - 1] - sort[i]
            if diff < res:
                res = diff
                
        return res
            
